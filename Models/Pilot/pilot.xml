<?xml version="1.0"?>

<PropertyList>

<!-- Parts of this file are adapted from Helijah's 'Old-WWI-Pilot' 3d file- the rest are From Rein's Pilots model in the 1910 Fokker Spin --> 

  <path>pilots-mesh.ac</path>

   <effect>
     <inherits-from>Effects/model-transparent</inherits-from>
      <object-name>lenses</object-name>
    </effect>

	<!-- De-select when in view 0 -->
	<animation>
		<type>select</type>
		<object-name>Pilot</object-name>
		<condition>
			<not>
				<equals>
					<property>sim/current-view/view-number</property>
					<value>0</value>
				</equals>
			</not>
		</condition>
	</animation>

</PropertyList>

